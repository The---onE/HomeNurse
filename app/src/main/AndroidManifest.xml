<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xmx.homenurse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".User.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Measure.TemperatureActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Measure.BloodPressureActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Measure.Schedule.AddMeasureScheduleActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Measure.PulesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Measure.HeartRateActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Record.AddRecordActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Appointment.AddAppointmentActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Measure.Schedule.MeasureScheduleDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Record.RecordAmountADayActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".Measure.Schedule.MeasureTimerService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>